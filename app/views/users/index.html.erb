<h1>Lista de Usuários</h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th colspan="3">Ações</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Mostrar', user %></td>
    <td><%= link_to 'Editar', edit_user_path(user) %></td>
    <td><%= link_to 'Remover', user, :confirm => 'Cofirma?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Usuário', new_user_path %>
